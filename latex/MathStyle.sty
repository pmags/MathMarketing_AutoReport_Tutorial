% http://texdoc.net/texmf-dist/doc/latex/tcolorbox/tcolorbox.pdf

\newcommand{\impactBox}[2]{
  \begin{tcolorbox}[width=\textwidth,
  fonttitle = \sffamily\bfseries\large, 
  colframe={DarkPurple},
  colback={Grey},
  title={#1},
  colupper=white,
  sharp corners]    
    \textsc{#2}
  \end{tcolorbox} 
}

\newcommand{\attentionBox}[1]{
  \begin{tcolorbox}[bicolor,
  sidebyside,
  lefthand width=0.5cm,
  sharp corners,
  boxrule=.4pt,
  colback=yellow!30,
  colbacklower=yellow!20]
    \includegraphics[scale=1]{images/attention-sign.png}
  \tcblower
    \textsc{#1}%
  \end{tcolorbox}
}
